<resources>
    <style name="Theme.Course_Viewer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark Theme Colors -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/light_green</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorSurface">@color/light_black</item>
        <item name="colorOnSurface">@color/warm_white</item>

        <item name="android:navigationBarColor">@color/light_black</item>
        <item name="android:statusBarColor">@color/light_blue</item>

        <!-- Card View Styling -->
        <item name="materialCardViewStyle">@style/AppCardViewStyle</item>
    </style>

    <!-- Card Style -->
    <style name="AppCardViewStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/dark_grey2</item>
    </style>
</resources>

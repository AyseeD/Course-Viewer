        <item name="colorSecondary">@color/black</item>

        <item name="colorSurface">@color/indigo</item>
        <item name="colorSurfaceContainer">@color/blue</item>
        <item name="colorSurfaceContainerHigh">@color/black</item>

        <item name="android:statusBarColor">@color/grey</item>
